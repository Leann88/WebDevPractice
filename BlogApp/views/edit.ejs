<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <div>
        <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="post">
            <div class="field">
                <label>Title</label>
                <input type="text" placeholder="Title" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" placeholder="image" name="blog[image]" value="<%=blog.image%>">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]">
                    <%=blog.body%>
                </textarea>
            </div>
            <div class="form-group">
                <button class="ui blue basic button" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
<% include partials/footer %>